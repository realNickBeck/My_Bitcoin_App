<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbol"
        android:text="Symbol"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:padding="2dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Company Name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="22dp"
                android:padding="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/companyLabel"
                android:textColor="@color/white"
                android:text="About Company"
                android:textStyle="bold"
                android:layout_below="@id/name"
                android:padding="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/companyInfo"
                android:textColor="@color/white"
                android:text="Company Info"
                android:layout_below="@id/companyLabel"
                android:padding="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sectorLabel"
                android:textColor="@color/white"
                android:text="Sector"
                android:textStyle="bold"
                android:layout_below="@id/companyInfo"
                android:padding="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sector"
                android:textColor="@color/white"
                android:text="Sector"
                android:layout_below="@id/sectorLabel"
                android:padding="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statsLabel"
                android:textColor="@color/white"
                android:text="Statistics"
                android:textStyle="bold"
                android:layout_below="@id/sector"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/openLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statsLabel"
                android:layout_marginTop="-1dp"
                android:padding="3dp"
                android:text="Open"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/open"
                android:text="open"
                android:textColor="@color/white"
                android:layout_below="@id/openLabel"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/closeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="174dp"
                android:layout_toRightOf="@id/openLabel"
                android:padding="3dp"
                android:text="Close"
                android:textColor="@color/white"
                android:layout_marginLeft="255dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_toRightOf="@id/open"
                android:padding="3dp"
                android:text="close"
                android:textColor="@color/white"
                android:layout_marginLeft="257dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/highLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="52 Week High"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_below="@id/open"/>

            <TextView
                android:id="@+id/high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="high"
                android:textColor="@color/white"
                android:layout_below="@id/highLabel"/>

            <TextView
                android:id="@+id/lowLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="228dp"
                android:layout_toRightOf="@id/highLabel"
                android:padding="3dp"
                android:text="52 Week Low"
                android:textColor="@color/white"
                android:layout_marginLeft="200dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="254dp"
                android:layout_toRightOf="@id/high"
                android:padding="3dp"
                android:text="low"
                android:textColor="@color/white"
                android:layout_marginLeft="261dp"/>

            <TextView
                android:id="@+id/marketCapLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Market Cap"
                android:textColor="@color/white"
                android:layout_below="@+id/high"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/marketCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="market cap"
                android:textColor="@color/white"
                android:layout_below="@id/marketCapLabel"/>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="675dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
